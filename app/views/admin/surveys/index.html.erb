<h1><%= current_model.model_name.human %> <%= link_to t('crud.new'), new_admin_survey_path, class: 'btn btn-lg btn-success' %></h1>

<%= paginate current_collection %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <%= th_for Survey, :id, :title, :questions %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% current_collection.each do |survey| %>
      <tr>
      <%= td_for survey, :id, :title, :questions %>
        <%= td_action_for survey %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate current_collection %>
