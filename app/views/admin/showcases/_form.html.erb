<%= simple_form_for(@admin_showcase) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :image, hint: '最佳大小 360x220' %>
    <%= f.input :is_online %>
    <%= f.input :sort_id %>
    <%= f.input :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
