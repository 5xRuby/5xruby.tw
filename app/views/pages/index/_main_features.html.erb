<!-- Start Feature Section -->
<div class="feature-section light-grey-bg bottom-padding-lg">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-lg-12 col-md-12 center-block">
        <h3 class="title text-center both-spacing-lg"><span><%= t('.about_5xruby') %></span></h3>
        <div class="feature-list">
          <% t('site.index.main_features').each do |item| %>
            <%= link_to send(item[:href_method].to_sym) do %>
            <a href="<%= item[:url] %>">
              <div class="col-sm-3 col-lg-3 col-md-3 text-center bottom-spacing-lg">
                <%= image_tag "main_features/#{item[:img]}", class: 'bottom-spacing' %>
                <h3><%= item[:title] %></h3>
                <p class="line-height-lg">
                  <% item[:description].each do |line| %>
                    <%= line %><br>
                  <% end %>
                </p>
              </div>
            </a>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- End Feature Section -->
