
<!-- Start Recent Lectures -->
<% if @talks.present? %>
  <div class="recent-lectures">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-lg-12 col-md-12 center-block">
          <h3 class="title text-center both-spacing-lg"><span><%= t('.next_talks') %></span></h3>
          <div class="lecture-list">
            <%= render partial: "talks/talk", collection: @talks, as: :talk %>
            <div class="col-sm-12 col-lg-12 col-md-12 bottom-spacing text-right">
              <%= link_to t('.more_talks'), talks_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<!-- End Recent Lectures -->

