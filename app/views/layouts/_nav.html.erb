<!-- Start Header -->
<header class="clearfix">

  <!-- Start  Logo & Naviagtion  -->
  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <%= link_to root_path, class: 'navbar-brand logo-link' do %>
            <%= image_tag 'logo.png', alt: t('company.name') %>
          <% end %>
        </div>
        <div class="clear"></div>
        <div id="navbar" class="navbar-collapse collapse">
          <div id="lang-sign-in">
            <ul class="nav navbar-nav">
              <%= locale_li '中文', :'zh-TW' %>
              <%= locale_li 'English', :en %>
              <%= locale_li '日本語', :ja %>
            </ul>
          </div>
          <ul class="nav navbar-nav">
            <%= nav_li t('.camp'), camp_path %>
            <%= nav_li t('.course'), courses_path %>
            <%= nav_li t('.showcases'), showcases_path %>
            <%= nav_li t('.training'), training_path %>
            <%= nav_li t('.news'), posts_path %>
          </ul>
        </div><!--/.nav-collapse -->
      </div><!--/.container-fluid -->
    </nav>
  </div>
  <!-- End Header Logo & Naviagtion -->
</header>
<!-- End Header -->
