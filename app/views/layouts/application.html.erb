<!DOCTYPE html>
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if IE 9 ]><html class="ie ie9" lang="en"> <![endif]-->
<%= content_tag :html, **html_tag_attributes do %>
<!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <title><%= t('company.name') %></title>
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, maximum-scale=1, user-scalable=no">
    <%= seo_meta_tags %>
    <!-- FB Insights -->
    <meta property="fb:app_id" content="511040962329986" />

    <!-- Favicons-->
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon"/>
    <link rel="apple-touch-icon" type="image/x-icon" href="/img/apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72" href="/img/apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114" href="/img/apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144" href="/img/apple-touch-icon-144x144-precomposed.png">

    <!-- CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/superfish.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/fontello/css/fontello.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

    <!-- RSS -->
    <%= auto_discovery_link_tag :rss, posts_path(format: :rss), title: '五倍紅寶石部落格' %>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <%= yield :append_head if content_for? :append_head %>
  </head>
  <%= content_tag :body, data: {controller: controller_path, action: action_name} do %>
    <%= render 'layouts/header' %>
    <%= render 'layouts/nav' %>
    <%= notice_message %>
    <%= yield %>

    <%= render 'layouts/footer' %>

    <div id="toTop"><%= t('.back_to_top') %></div>

    <!-- OTHER JS -->
    <script src="/js/superfish.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/validate.js"></script>
    <script src="/js/jquery.placeholder.js"></script>
    <script src="/js/functions.js"></script>
    <script src="/js/classie.js"></script>
    <script src="/js/uisearch.js"></script>
    <script>new UISearch( document.getElementById( 'sb-search' ) );</script>
    <!-- GA code -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-51124505-1', '5xruby.tw');
      ga('send', 'pageview');
    </script>
    <%= yield :append_body if content_for? :append_body %>
  <% end %><!-- body -->
<% end %><!-- html -->
