<!-- Start Login Form -->
<div class="login-form bottom-padding-lg width-medium">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-lg-6 col-md-6 top-spacing center-block">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: '' }) do |f| %>
          <h3 class="both-spacing text-center red-bg four-padding-lg text-white">
            <i class="fa fa-diamond more-large both-spacing-sm" aria-hidden="true"></i><span><%= t('.title') %></span>
          </h3>
          <div class="login-input">
            <div class="form-group has-feedback bottom-spacing">
              <%= f.input_field :email, required: false, autofocus: true, class: 'form-control input-lg', placeholder: t('.placeholder.email') %>
            </div>
            <div class="form-group has-feedback bottom-spacing">
              <%= f.input_field :password, required: false, class: 'form-control input-lg', placeholder: t('.placeholder.password') %>
            </div>
            <%= f.button :submit, t('.login'), class: 'btn btn-block btn-login bottom-spacing' %>
            <div class="both-spacing-sm text-center">
              <%= link_to t('.forget_pw'), new_password_path(resource_name), class: 'small' %>
              ï¼Ž
              <%= link_to t('.register'), new_registration_path(resource_name), class: 'small' %>
            </div>
          </div>
          <div class="or bottom-spacing">
            <span>OR</span>
          </div>
          <div class="social-login">
            <%= link_to localized_omniauth_path(:google_oauth2), class: 'btn btn-block btn-google-login bottom-spacing' do %>
              <strong><i class="fa fa-google" aria-hidden="true"></i>&nbsp;&nbsp;<%= t('.login_with.google') %></strong>
            <% end %>
            <%= link_to localized_omniauth_path(:facebook), class: 'btn btn-block btn-fb-login bottom-spacing' do %>
              <strong><i class="fa fa-facebook" aria-hidden="true"></i>&nbsp;&nbsp;<%= t('.login_with.facebook') %></strong>
            <% end %>
            <%= link_to localized_omniauth_path(:github), class: 'btn btn-block btn-github-login bottom-spacing' do %>
              <strong><i class="fa fa-github" aria-hidden="true"></i>&nbsp;&nbsp;<%= t('.login_with.github') %></strong>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- End Login Form -->
