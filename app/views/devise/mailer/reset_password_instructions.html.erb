<style>
* {
  transition-duration: 0.5s;
}
.row {
  margin-left: -15px;
  margin-right: -15px;
}
@media (min-width: 992px) {
  .container {
    width: 75%;
  }
}
.top-spacing {
  margin-top: 30px !important;
}
.bottom-spacing {
  margin-bottom: 30px !important;
}
.center-block {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.btn {
  display: inline-block;
  margin-bottom: 0;
  font-weight: normal;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  border: 1px solid transparent;
  white-space: nowrap;
  padding: 6px 12px;
  font-size: 14px;
  line-height: 1.42857;
  border-radius: 4px;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
.btn-red {
  background: #b81939;
  padding: 6px 24px;
  color: #fff;
  border-radius: 5px;
  font-size: 16px;
}
.btn-red:hover {
  background-color: #cd3151 !important;
  color: #fff;
}
a {
  text-decoration: none;
  color: #b81939;
}

body {
  background: #f8f6f3;
}
.panel {
  padding: 30px 40px;
  background: white;
}
article {
  margin: 30px 0;
}
.contact {
  display: inline-block;
  margin-left: 30px;
  font-size: 14px;
  line-height: 2em;
}
.ruby-icon {
  display: inline-block;
  margin-bottom: 8px;
}
.phone {
  color: #e28d95;
  margin-right: 20px;
}
footer {
  padding: 0;
  color: #a4a4a3;
}
footer > div {
  display: block;
  width: 440px;
}
</style>

<div class="row">
  <div class="container top-spacing center-block">
    <%= image_tag 'logo.png', alt: t('company.name') %>
    <div class="top-spacing panel">
      <article>
        <p><%= t('.title') %></p>
      </article>
      <article>
        <p><%= t('.change_password') %></p>
        <p><%= link_to t('.link'), edit_user_password_url(reset_password_token: @token), class: 'btn btn-red' %></p>
      </article>
      <article>
        <p>
          <%= t('.ignore') %><br/>
          <%= t('.contact') %>
        </p>
      </article>
    </div>
  </div>
</div>

<footer>
  <div class="top-spacing bottom-spacing company center-block">
    <%= image_tag '5xrubyjp-logo-grey.png', alt: 'Ruby', class: "ruby-icon" %>
    <div class="contact">
      <%= t('company.name_full') %><br />
      <%= t('company.address') %><br />
      Tel：<span class="phone"><%= t('company.contact_phone') %></span>
      Fax：<span class="phone"><%= t('company.fax') %></span>
    </div>
  </div>
</footer>
